#include "../../includes/ft_ls.h"

void		flag_f(t_all *all)
{
	DIR				*dir;
	struct dirent	*file;

	if (!(dir = opendir(all->dir)))
	{
		exit(ERROR);
		perror("ft_ls");
	}
	while ((file = readdir(dir)) != NULL)
		ft_printf("%.15s", file->d_name);
	closedir(dir);
}
